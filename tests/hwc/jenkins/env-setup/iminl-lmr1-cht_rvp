export INTEL_HWC_ALWAYS_BUILD=hwc

PREFIX=/usr2/jenkins/jobs/Hardware_Composer_Builder_CHT-LMR1/workspace/build

#export TOP=$PREFIX/android_iminl_lmr1_111015
export TOP=$PREFIX/android_iminl_lmr1_070116
#export P4_ROOT=$PREFIX/ufo_lmr1_161015/gfx_Development
export P4_ROOT=$PREFIX/ufo_lmr1_080116/gfx_Development
export PRODUCT=cht_rvp
export ANDROID_SERIAL=SPC334800004

cd $TOP
source build/envsetup.sh
lunch $PRODUCT-userdebug
cd -

alias make-android='time make -C $P4_ROOT/Tools/Linux/ BUILD_TYPE=release ANDROID_SRC=$TOP TARGET_PRODUCT=$PRODUCT JOBS=16 TARGET_BUILD_VARIANT=userdebug UFO_OCL=n UFO_RS=n PATCH=nopatch GFXGEN=8 android'
alias make-ufo='time make -C $P4_ROOT/Tools/Linux/ BUILD_TYPE=release ANDROID_SRC=$TOP TARGET_PRODUCT=$PRODUCT JOBS=32 TARGET_BUILD_VARIANT=eng UFO_OCL=n UFO_RS=n ufo'

alias cd-hwc='cd $P4_ROOT/Source/Android/hwc'
alias cd-hwch='cd $PREFIX/hwcval/tests/hwc/'

cd $PREFIX/hwcval/tests/hwc/
source init.sh
cd -

PS1="(jenkins: 1andr main cht-lmr1 hwc) $PS1"
export PS1
